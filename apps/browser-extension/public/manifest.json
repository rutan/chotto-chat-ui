{
  "manifest_version": 3,
  "name": "Chotto Chat UI",
  "version": "1.0",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "permissions": ["activeTab", "tabs", "declarativeNetRequestWithHostAccess"],
  "host_permissions": ["http://localhost:11434/api/tags", "http://localhost:11434/api/chat"],
  "action": {
    "default_icon": {
      "48": "icons/48.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png",
    "256": "icons/256.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
